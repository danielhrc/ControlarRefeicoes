<p id="notice"><%= notice %></p>

<h1>Refeições</h1>



<div>
  <% if can? :create, Refeicao %>
    <%= button_to 'New Refeicao', { :action => "new" }, :method => :get %>
  <% end %>
</div>

<table>
   <thead>
    <tr>
      <th>Tipo</th>
      <th>Alimentos</th>
      <th>Sentimento</th>
      <th>Hora</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @refeicaos.each do |refeicao| %>
      <tr>
        <td><%= refeicao.tipo %></td>
        <td><%= refeicao.alimentos %></td>
        <td><%= refeicao.sentimento %></td>
        <td><%= refeicao.hora %></td>
        <td><%= link_to 'Show', refeicao %></td>
        <td><%= link_to 'Edit', edit_refeicao_path(refeicao) %></td>
        <td><%= link_to 'Destroy', refeicao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>

</table>
<%= will_paginate @refeicaos %>

<br>

<div>
  <%= link_to 'Export to Excel', refeicoes_excel_path(format: :csv) %>
</div>



